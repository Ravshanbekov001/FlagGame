                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_10"
                android:layout_rowWeight="1"
